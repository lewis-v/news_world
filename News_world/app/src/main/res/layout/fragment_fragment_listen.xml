<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yw.news_world.Fragment_listen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/listen_title"
            android:text="News_world"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/listen_img"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/listen_img"
            android:layout_toStartOf="@+id/listen_img">
        <ImageButton
            android:id="@+id/listen_last"
            android:layout_gravity="center"
            android:background="@mipmap/last"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageButton
            android:id="@+id/listen_start"
            android:layout_gravity="center"
            android:background="@mipmap/play"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageButton
            android:id="@+id/listen_next"
            android:layout_gravity="center"
            android:background="@mipmap/next"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/listen_recycle"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/recycle"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/listen_img"
            android:background="@mipmap/news_back"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/listen_swip"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listen_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
