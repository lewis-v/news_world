<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaaaaa">
    <ImageView
        android:background="@mipmap/news_back"
        android:id="@+id/notification_img"
        android:layout_centerVertical="true"
        android:layout_width="64dp"
        android:layout_height="64dp" />
<TextView
    android:ellipsize="marquee"
    android:marqueeRepeatLimit="marquee_forever"
    android:singleLine="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:textColor="#000000"
    android:text="News_world"
    android:textSize="18sp"
    android:id="@+id/notification_title"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/notification_img"
    android:layout_toEndOf="@+id/notification_img" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/notification_close"
    android:layout_toStartOf="@+id/notification_close">
    <ImageButton
        android:id="@+id/bt_last"
        android:layout_gravity="center"
        android:background="@mipmap/last"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageButton
        android:id="@+id/bt_play"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <ImageButton
        android:id="@+id/bt_next"
        android:layout_gravity="center"
        android:background="@mipmap/next"
        android:layout_width="50dp"
        android:layout_height="50dp" />

</LinearLayout>
    <ImageView
        android:background="@mipmap/close"
    android:layout_width="20dp"
    android:layout_height="64dp"
        android:id="@+id/notification_close"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
